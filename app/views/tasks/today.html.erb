<p style="color: green"><%= notice %></p>

<h1>Tasks for today</h1>

<table class='table table-striped table-hover'>
    <thead class='thead-light'>
        <tr colspan="6">
            <th>ID</th>
            <th>Title</th>
            <th>Details</th>
            <th>Date</th>
            <th colspan="2"></th>
        </tr>
    </thead>

    <tbody>
        <% @tasks.each do |task| %>
            <tr>
                <td><%= task.id %></td>
                <td><%= task.title %></td>     
                <td><%= task.details %></td>     
                <td><%= task.date %></td>

            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'Back to Categories', categories_path, class:'btn btn-secondary' %>



