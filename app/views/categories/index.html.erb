<p style="color: green"><%= notice %></p>

<h1>Categories</h1>
<%= link_to "Tasks for today", today_path, class:'btn btn-warning mb-2' %>

<table class = "table table-striped table-hover">
  <thead class="thead-dark">
    <tr colspan="5">
      <th>Title</th>
      <th>Details</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= category.details %></td>
        <td>
          <%= link_to "Open", category, class:'btn btn-success' %>
          <%= link_to "Edit", edit_category_path(category.id), class:'btn btn-info' %>
        </td>
        <td><%= button_to "Delete", category_path(category.id), method: :delete, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add category", new_category_path, class:'btn btn-dark' %>
